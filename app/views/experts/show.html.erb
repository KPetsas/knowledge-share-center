<%= render 'shared/page_title', title: "Profile of expert: #{@expert.expertname}" %>
<div class="row">
  <div class="col-md-4 col-md-offset-4 center">
    <%= avatar_for @expert, size: 150 %>
  </div>
</div>

<% if @expert.guides.count != 0 %>
  <h4 align="center"><%= @expert.expertname %>'s guides</h4>

  <div align="center">
    <%= will_paginate @expert_guides %>
  </div>

  <%= render 'guides/guide', object: @expert_guides %>

  <div align="center">
    <%= will_paginate @expert_guides %>
  </div>
<% else %>
  <h4 align="center">No guides yet!</h4>
<% end %>
