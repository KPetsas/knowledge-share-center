<%= render 'shared/page_title', title: "edit an existing guide" %>
<% if @guide.errors.any? %>
  <div class="row">
    <div class="col-md-8 col-md-offset-2">
      <div class="panel panel-danger">
        <div class="panel-heading">
          <h2 class="panel-title">
            <%= pluralize(@guide.errors.count, "error") %>
            prohibited this <%= @guide.class %> from being saved:
          </h2>
          <div class="panel-body">
            <ul>
              <% @guide.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div class="row">
  <div class="col-md-12">
    <%= form_for(@guide, :html => {class: "form-horizontal", role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :title %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :title, class: "form-control", placeholder: "Guide title", autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :instructions %>
        </div>
        <div class="col-md-8">
          <%= f.text_area :instructions, rows:10, class: "form-control", placeholder: "Enter steps"%>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
          <%= f.submit class: "btn btn-success btn-lg btn-xlarge" %>
        </div>
      </div>
    <% end %>
    <div class="col-md-4 col-md-offset-4 colorlink">
      [ <%= link_to "Cancel request and return to guides list", guides_path %> ]
    </div>
  </div>
</div>
