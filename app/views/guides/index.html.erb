<h1 align="center"> Listing all guides </h1>
<hr/>

<% @guides.each do |guide| %>
<div class="row">
  <div class="col-md-2">
    <section class="center">

    </section>
  </div>
  <div class="col-md-8 well">
    <h4><%= guide.title %></h4>
    <p><%= truncate(guide.instructions, length: 150) %></p>
    <p>
      <span class="quiet"><small>Created <%= time_ago_in_words(guide.created_at) %> ago</small></span>
    </p>

  </div>
</div>
<% end %>
