<%= render 'shared/page_title', title: "Available Topics" %>

<div align="center">
  <%= will_paginate %>
  <% @topics.each do |topic| %>
    <ul class="listing">
      <div class="row">
        <div class="well col-md-4 col-md-offset-4">
          <li class="expert-title"><%= link_to topic.name, topic_path(topic) %></li>
          <li><small><%= pluralize(topic.guides.count, "guide") if topic.guides %></small></li>
          <% if logged_in? && current_user.admin? %>
            <li><%= link_to "Edit this topic", edit_topic_path(topic) %></li>
          <% end %>
        </div>
      </div>
    </ul>
  <% end %>
  <%= will_paginate %>
</div>
